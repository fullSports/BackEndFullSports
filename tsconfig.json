{
  "compilerOptions": {
    "target": "es2016",                                
    "outDir": "./build",
    "module": "commonjs",                    
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "strict": true,                       
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts","**/*.spec.js"], 
}
